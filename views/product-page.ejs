<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/82fa38c892.js" crossorigin="anonymous"></script>
    <link href="./css/index-styles.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@800&family=Quicksand:wght@300;600;700&display=swap" rel="stylesheet">
    <link rel="shortcut icon" type="image/x-icon" href="./images/balloonfix-logo.jpg"/>
    <title>Product Page | Balloonfix</title>
  </head>
  <body>
    <div class="login-feedback-snackbar login-feedback-popup invisible"></div>
    <div class="product-page-title">
      <div class="product-page-title__number">01.</div>

      <div class="product-page-title__text-and-user-navigation-wrapper">
      <% if (user) { %>
        <div class="product-page-title__user-navigation user-navigation visible">
          <div class="user-navigation__image-wrapper">
            <img class="user-navigation__image" src="<%= registeredUserData["user-image"] %>"  alt="user-image" referrerpolicy="no-referrer">
          </div>
          <div class="user-navigation__user-email">
            <%= registeredUserData.email %>
          </div>
          <i class="fa-solid fa-caret-down user-navigation__down-arrow-icon"></i>
          <div class="user-navigation__navigation-drop-down-wrapper invisible">
            <a href="./" class="user-navigation__navigational-link">Home</a>
            <a href="./my-orders-page" class="user-navigation__navigational-link">My Orders</a>
          </div> 
        </div>
        <% } else { %>
          <div class="product-page-title__user-navigation user-navigation invisible" style="visibility: hidden;">
            <div class="user-navigation__image-wrapper">
              <img class="user-navigation__image" src=""  alt="user-image">
            </div>
            <div class="user-navigation__user-email"></div>
            <i class="fa-solid fa-caret-down user-navigation__down-arrow-icon"></i>
            <div class="user-navigation__navigation-drop-down-wrapper invisible">
              <a href="./" class="user-navigation__navigational-link">Home</a>
              <a href="./my-orders-page" class="user-navigation__navigational-link">My Orders</a>
            </div> 
          </div>
        <% } %>
        <div class="product-page-title__text">Product Page</div>
      </div>
    </div>
    </div>
    <div class="product-details-container">
      <div class="product-details-container__selected-product-image-container">
          <img class="selected-product-image" src="<%= selectedProductDetails.primaryImage %>"  alt="selected-product-image"/>
          <div class="product-details-container__selected-product-image-row selected-product-image-row">
            <% selectedProductDetails.additionalImages.forEach((imageURL, index) => { %>
              <img class="selected-product-image-row__row-image row-image-<%= index+1 %>" src="<%= imageURL %>"  alt="row-image"/>
            <% }) %>
          </div>
      </div>
      <div class="product-details-container__about-product-container about-product-container">
        <div class="about-product-container-title">
          <%= selectedProductDetails["product-name"] %>
        </div>
        <div class="about-product-container-product-description">
          <%= selectedProductDetails["product-description"] %>
        </div>
        <div class="about-product-container-product-price">    
          <% if (selectedProductDetails["product-discount"]) { %>
            <i class="fa-solid fa-indian-rupee-sign"></i>
            <span class="product-discounted-price">
              <%= Number(selectedProductDetails["product-price"]) - Number(selectedProductDetails["product-price"]) * Number(selectedProductDetails["product-discount"]) / 100 %>
            </span>
            <span class="product-price" style="font-size: 16px;">
              <strike><%= selectedProductDetails["product-price"] %></strike>
            </span>&nbsp;&nbsp;&nbsp;
            <span class="product-discount-percentage">
              <%= selectedProductDetails["product-discount"] %>% off
            </span>
          <% } else { %>
            <i class="fa-solid fa-indian-rupee-sign"></i>
            <span class="product-price">
              <%= selectedProductDetails["product-price"] %>
            </span>
            <span class="product-discounted-price"></span>
            <span class="product-discount-percentage" style="display: none;">0% off</span>
          <% } %>
        </div>
        <% if (selectedProductDetails["product-availability"] === "unavailable") { %>
        <div class="about-product-container__product-availability-status">
          Currently unavailable.
        </div>
        <% } else { %> 
        <div class="about-product-container-buttons">
          <div class="about-product-container__button event-type-button">
            Event Type
            <i class="fa-solid fa-angle-down angle-down-icon rotated"></i>
            <div class="event-type-button__drop-down-list invisible">
              <span class="drop-down-list__anniversary event-type-button__drop-down-list-option">Anniversary</span>
              <span class="drop-down-list__birthday event-type-button__drop-down-list-option">Birthday</span>
              <span class="drop-down-list__baby-shower event-type-button__drop-down-list-option">Baby-shower</span>
              <span class="drop-down-list__baby-other event-type-button__drop-down-list-option">Other</span>
            </div>
            <div class="event-type-button__error-message invisible">
              Select a type.
            </div>
          </div>
          <div class="about-product-container__button book-now-button">
            Book Now
            <i class="fa-solid fa-hand-point-up"></i>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <div class="sign-up-popup-wrapper invisible">
      <div class="sign-up-popup-wrapper__sign-up-popup sign-up-popup">
        <div class="sign-up-popup__close-button-wrapper">
          <i class="fa-solid fa-circle-xmark sign-up-popup__close-button"></i>
        </div>
        <div class="sign-up-popup__text">
          <span class="sign-up-popup__bolder-text">
            Sign-Up
